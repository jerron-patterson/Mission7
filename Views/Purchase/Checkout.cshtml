@{
}
@model Purchase

<h2>Check Out</h2>
<p>Please enter the following details to complete the check out.</p>
<form method="post" asp-action="Checkout">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h4>Ship To: </h4>
    <div class="form-group">
        <label asp-for="Name">Name: </label>
        <input class="form-control" asp-for="Name" />
    </div>
    <h4>Address</h4>
    <div class="form-group">
        <label asp-for="AddressLine1">Address Line 1: </label><input class="form-control" asp-for="AddressLine1" />
        <label asp-for="AddressLine2">Address Line 2: </label><input class="form-control" asp-for="AddressLine2" />
        <label asp-for="AddressLine3">Address Line 3: </label><input class="form-control" asp-for="AddressLine3" />
    </div>
    <div class="form-group">
        <label asp-for="City">City: </label><input class="form-control" asp-for="City" />
    </div>
    <div class="form-group">
        <label asp-for="State">State: </label><input class="form-control" asp-for="State" />
    </div>
    <div class="form-group">
        <label asp-for="Zip">Zip Code: </label><input class="form-control" asp-for="Zip" />
    </div>
    <div class="form-group">
        <label asp-for="Country">Country: </label><input class="form-control" asp-for="Country" />
    </div>
    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Check Out">
    </div>
</form>
